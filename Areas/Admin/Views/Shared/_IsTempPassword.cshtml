<script>
	$(document).ready(function() {
        $.ajax({
                url: '@Url.Action("IsTempPassword", "Account", new { area = "Admin" })',
                type: 'POST',
                dataType: 'json',
                success: function (isTempPwd) {
                    const changePwdModal = $("#changePasswordModal");
                    if (isTempPwd) {
                        changePwdModal.modal("show");
                    }
                },
                error: function () {
                    alert("Có lỗi xảy ra. Thử lại !");
                }
            });
	});
</script>
