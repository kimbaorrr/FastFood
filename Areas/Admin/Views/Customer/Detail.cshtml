@{
    var customerDetail = ViewBag.CustomerDetail as CustomerDetailViewModel;
    var orders = ViewBag.Orders as IPagedList<Order>;
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
	var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<!-- Start Container Fluid -->
<div class="container-xxl">


    <div class="row">
        <div class="col-lg-4">
            <div class="card overflow-hidden">
                <div class="card-body">
                    <div class="bg-primary profile-bg rounded-top position-relative mx-n3 mt-n3 p-5">
                        <img src="@customerDetail.Avatar" alt="" class="avatar-lg border-light border-3 rounded-circle position-absolute top-100 translate-middle start-0 ms-5 border">
                    </div>
                    <div class="mt-4 pt-3">
                        <h4 class="mb-1"> @customerDetail.FullName<i class="bx bxs-badge-check text-success align-middle"></i></h4>
                        <div class="mt-2">
                            <a href="#!" class="link-primary fs-15"></a>
                            <p class="fs-15 mb-1 mt-1"><span class="text-dark fw-semibold">Email : </span> @customerDetail.Email</p>
                            <p class="fs-15 mb-0 mt-1"><span class="text-dark fw-semibold">Phone : </span> @customerDetail.Phone</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <div>
                        <h4 class="card-title">Thông tin chi tiết</h4>
                    </div>
                    <div>
                        @{
                            if (customerDetail.RecentActivities == 0)
                            {
                                <span class="badge bg-danger-subtle text-danger px-2 py-1">Chưa hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-success-subtle text-success px-2 py-1">Hoạt động @customerDetail.LastAccessedTime giờ trước</span>
                            }
                        }

                    </div>

                </div>
                <div class="card-body py-2">
                    <div class="table-responsive">
                        <table class="mb-0 table">
                            <tbody>
                                <tr>
                                    <td class="px-0">
                                        <p class="d-flex align-items-center fw-semibold text-dark mb-0 gap-1">Mã khách hàng : </p>
                                    </td>
                                    <td class="text-dark fw-medium px-0">@customerDetail.CustomerId</td>
                                </tr>
                                <tr>
                                    <td class="px-0">
                                        <p class="d-flex align-items-center fw-semibold text-dark mb-0 gap-1">Ngày sinh : </p>
                                    </td>
                                    <td class="text-dark fw-medium px-0">@(customerDetail.Bod.HasValue ? customerDetail.Bod.Value : string.Empty)</td>
                                </tr>
                                <tr>
                                    <td class="px-0">
                                        <p class="d-flex align-items-center fw-semibold text-dark mb-0 gap-1"> Email : </p>
                                    </td>
                                    <td class="text-dark fw-medium px-0">@customerDetail.Email</td>
                                </tr>
                                <tr>
                                    <td class="px-0">
                                        <p class="d-flex align-items-center fw-semibold text-dark mb-0 gap-1"> Địa chỉ giao hàng : </p>
                                    </td>
                                    <td class="text-dark fw-medium px-0">@customerDetail.Address</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h4 class="card-title d-flex align-items-center mb-2 gap-2">Tổng số hóa đơn</h4>
                                    <p class="text-muted fw-medium fs-22 mb-0">@customerDetail.NumOfPurchase</p>
                                </div>
                                <div>
                                    <div class="avatar-md bg-primary rounded bg-opacity-10">
                                        <iconify-icon icon="solar:bill-list-bold-duotone" class="fs-32 text-primary avatar-title"></iconify-icon>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h4 class="card-title d-flex align-items-center mb-2 gap-2">Tổng chi tiêu</h4>
                                    <p class="text-muted fw-medium fs-22 mb-0">@customerDetail.TotalInvoice đ</p>
                                </div>
                                <div>
                                    <div class="avatar-md bg-primary rounded bg-opacity-10">
                                        <iconify-icon icon="solar:box-bold-duotone" class="fs-32 text-primary avatar-title"></iconify-icon>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h4 class="card-title d-flex align-items-center mb-2 gap-2">Chi tiêu lớn nhất</h4>
                                    <p class="text-muted fw-medium fs-22 mb-0">@customerDetail.BiggestOrder đ</p>
                                </div>
                                <div>
                                    <div class="avatar-md bg-primary rounded bg-opacity-10">
                                        <iconify-icon icon="solar:chat-round-money-bold-duotone" class="fs-32 text-primary avatar-title"></iconify-icon>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Lịch sử đặt đơn & thanh toán</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table-hover table-centered mb-0 table align-middle">
                            <thead class="bg-light-subtle">
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Ngày đặt</th>
                                    <th>Người bán</th>
                                    <th>Tổng thanh toán</th>
                                    <th>Trạng thái đơn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in orders!)
                                {
                                    <tr>
                                        <td><a href="@Url.Action("Detail", "Order", new { area = "Admin", orderId = order.OrderId })" class="text-body">@order.OrderId</a> </td>
                                        <td>@order.OrderDate</td>
                                        <td>@(order.Seller.HasValue ? order.SellerNavigation?.LastName + " " + order.SellerNavigation?.FirstName : string.Empty)</td>
                                        <td class="text-red fw-bold">@order.TotalPrice đ</td>
                                        <td> <span class="badge text-light fs-13 @order.OrderStatusNavigation.Color border px-2 py-1">@order.OrderStatusNavigation.StatusName</span></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer border-top">
                    <ul class="pagination pagination-rounded justify-content-end m-0">
                        <!-- Previous Page Link -->
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Detail", "Customer", new { area = "Admin", page = ViewBag.CurrentPage - 1, customerId = customerDetail.CustomerId })">
                                    Trước đây
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Trước đây</span>
                            </li>
                        }

                        <!-- Page Numbers -->
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            if (i == ViewBag.CurrentPage)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Detail", "Customer", new { area = "Admin", page = i, customerId = customerDetail.CustomerId })">@i</a>
                                </li>
                            }
                        }

                        <!-- Next Page Link -->
                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Detail", "Customer", new { area = "Admin", page = ViewBag.CurrentPage + 1, customerId = customerDetail.CustomerId })">
                                    Tiếp theo
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Tiếp theo</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>


</div>
