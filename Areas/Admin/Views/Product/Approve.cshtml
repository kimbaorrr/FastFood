@using FastFood.DB;
@{
    ViewBag.Title = "Phê duyệt sản phẩm";
    var products = ViewBag.Products as List<Product>;
}

@Html.AntiForgeryToken()
<!-- Start Container Fluid -->
<div class="container-fluid">

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center gap-1">
                    <h4 class="card-title flex-grow-1">@ViewBag.Title</h4>

                    <div class="d-flex mb-2 gap-2">
                        <button id="approveProductSelected" class="btn btn-success d-none btn-sm">Phê duyệt được chọn</button>
                        <button id="rejectProductSelected" class="btn btn-danger d-none btn-sm">Từ chối được chọn</button>
                    </div>
                </div>
                <div>
                    <div class="table-responsive">
                        <table class="table-hover table-centered mb-0 table align-middle">
                            <thead class="bg-light-subtle">
                                <tr>
                                    <th style="width: 20px;">
                                        <div class="form-check ms-1">
                                            <input type="checkbox" class="form-check-input" id="select-all">
                                            <label class="form-check-label" for="select-all"></label>
                                        </div>
                                    </th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá bán</th>
                                    <th>Danh mục</th>
                                    <th>Đã duyệt</th>
                                    <th>Ngày duyệt</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in products!)
                                {
                                    string[] images = product.Image?.Split(",") ?? new string[] { };
                                    <tr>
                                        <td>
   
                                                    <div class="form-check ms-1">
                                                        <input type="checkbox" class="form-check-input product-checkbox" data-product-id="@product.ProductId">
                                                        <label class="form-check-label">&nbsp;</label>
                                                    </div>

</td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="bg-light avatar-md d-flex align-items-center justify-content-center rounded">
                                                    <img src="@images[0]" alt="" class="avatar-md">
                                                </div>
                                                <div class="flex-grow-1">
                                                    <p class="text-dark fw-medium fs-15 mb-1">@product.ProductName</p>
                                                    <p class="text-secondary product-description mb-0" data-full-description="@product.Summary">@product.Summary</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex flex-column align-items-center">
                                                <p class="text-red fw-bold mb-1">@product.FinalPrice đ</p>
                                                @if (product.Discount != 0)
                                                {
                                                    <p class="text-secondary text-muted text-decoration-line-through mb-0">@product.OriginalPrice đ</p>
                                                }
                                            </div>
                                        </td>
                                        <td> @product.Category.CategoryName</td>
                                        <td>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 48 48"><path fill="#e92241" fill-rule="evenodd" d="M44 24c0 11.046-8.954 20-20 20S4 35.046 4 24S12.954 4 24 4s20 8.954 20 20m-27.778 7.778a1 1 0 0 1 0-1.414L22.586 24l-6.364-6.364a1 1 0 0 1 1.414-1.414L24 22.586l6.364-6.364a1 1 0 0 1 1.414 1.414L25.414 24l6.364 6.364a1 1 0 0 1-1.414 1.414L24 25.414l-6.364 6.364a1 1 0 0 1-1.414 0" clip-rule="evenodd" /></svg>
                                        </td>
                                        <td> @product.ApprovedAt</td>
                                        <td>
                                                    <div class="d-flex gap-2">
                                                        <button type="button" class="btn btn-green btn-sm action-btn" data-product-id="@product.ProductId" data-action="accept">
                                                            Phê duyệt
                                                        </button>
                                                <button type="button" class="btn btn-red btn-sm action-btn" data-product-id="@product.ProductId" data-action="refuse">
                                                            Từ chối
                                                        </button>
                                                    </div>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- end table-responsive -->
                </div>
                <div class="card-footer border-top">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-end mb-0">
                            <!-- Previous Page Link -->
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Approve", "Product", new { area = "Admin", page = ViewBag.CurrentPage - 1 })">
                                        Trước đây
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Trước đây</span>
                                </li>
                            }

                            <!-- Page Numbers -->
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                if (i == ViewBag.CurrentPage)
                                {
                                    <li class="page-item active">
                                        <span class="page-link">@i</span>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Approve", "Product", new { area = "Admin", page = i })">@i</a>
                                    </li>
                                }
                            }

                            <!-- Next Page Link -->
                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Approve", "Product", new { area = "Admin", page = ViewBag.CurrentPage + 1 })">
                                        Tiếp theo
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Tiếp theo</span>
                                </li>
                            }
                        </ul>

                    </nav>
                </div>
            </div>
        </div>

    </div>

</div>
<!-- End Container Fluid -->

<script>
    $(document).ready(function () {
        const token = $('input[name="__RequestVerificationToken"]').val();

        $('.action-btn').click(function () {
            const productId = $(this).data('product-id');
            const action = $(this).data('action');
            $.ajax({
                url: '@Url.Action("Approve", "Product", new {area = "Admin"})',
                method: 'POST',
                dataType: 'json',
                data: {
                    productId: productId,
                    action: action,
                    __RequestVerificationToken: token
                },
                success: function (response) {
                    alertMessage(response.message, response.type);
                    if (response.success) {
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    }
                },
                error: function () {
                    alert('Đã xảy ra lỗi khi thực hiện yêu cầu.');
                }
            });
        });

        $('#select-all').on('change', function () {
            $('.product-checkbox').prop('checked', this.checked);
            toggleActionButtons();
        });

        $('.product-checkbox').on('change', function () {
            toggleActionButtons();
        });

        function toggleActionButtons() {
            const anyChecked = $('.product-checkbox:checked').length > 0;
            $('#approveProductSelected, #rejectProductSelected').toggleClass('d-none', !anyChecked);
        }

        $('#approveProductSelected').on('click', function () {
            let selectedIds = [];
            $('.product-checkbox:checked').each(function () {
                let row = $(this).closest('tr');
                if (row.find('.action-btn').length) {
                    selectedIds.push($(this).data('id'));
                }
            });

            if (selectedIds.length > 0) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ApproveMultiple", "Product", new {area = "Admin"})',
                    dataType: 'json',
                    data: { productIds: selectedIds, action: 'accept', __RequestVerificationToken: token },
                    success: function (response) {
                        alertMessage(response.message, response.type);
                        if (response.success) {
                            setTimeout(() => {
                                location.reload();
                            }, 1500);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi thực hiện yêu cầu.');
                    }
                });
            }
        });

        $('#rejectProductSelected').on('click', function () {
            let selectedIds = [];
            $('.product-checkbox:checked').each(function () {
                let row = $(this).closest('tr');
                if (row.find('.action-btn').length) {
                    selectedIds.push($(this).data('id'));
                }
            });

            if (selectedIds.length > 0) {
                $.ajax({
                    type: 'POST',
                    dataType: 'json',
                    url: '@Url.Action("ApproveMultiple", "Product", new {area = "Admin"})',
                    data: { productIds: selectedIds, action: 'refuse', __RequestVerificationToken: token },
                    success: function (response) {
                        alertMessage(response.message, response.type);
                        if (response.success) {
                            setTimeout(() => {
                                location.reload();
                            }, 1500);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi thực hiện yêu cầu.');
                    }
                });
            }
        });

        $('.product-description').each(function () {
            var fullDescription = $(this).data('full-description');
            if (fullDescription.length > 30) {
                var shortDescription = fullDescription.substring(0, 30) + ' ...';
                $(this).text(shortDescription);
            }
        });
    });
</script>
