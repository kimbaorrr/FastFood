@model CustomerCustomHomeViewModel
@{
    var bestSellingProductImages = Model.BestSellingProduct.Image?.Split(",", StringSplitOptions.RemoveEmptyEntries) ?? new string[] { };
}
<section class="hero-section">
    <!--=== Hero Wrapper ===-->
    <div class="hero-wrapper-two bg_cover" style="background-image: url(@(Model.BestSellingProduct.Category?.BackgroundImage ?? string.Empty)); background-size:cover;">
        <div class="shape shape-one scene"><span data-depth=".5"><img src="/public_page/assets/images/hero/shape-1.png" alt="shape image"></span></div>
        <div class="shape shape-two scene"><span data-depth=".7"><img src="/public_page/assets/images/hero/shape-3.png" alt="shape image"></span></div>
        <div class="shape shape-three scene"><span data-depth=".8"><img src="/public_page/assets/images/hero/shape-4.png" alt="shape image"></span></div>
        <!--=== Hero Image ===-->

        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <!--=== Hero Content ===-->
                    <div class="hero-content">
                        <span class="tag-line wow fadeInUp" data-wow-delay=".4s">Món ăn Được Ưa Chuộng Nhất</span>
                        <h1 class="wow fadeInDown" data-wow-delay=".5s">
                            @Model.BestSellingProduct.ProductName
                        </h1>
                        <p class="wow fadeInDown" data-wow-delay=".6s">
                            @Model.BestSellingProduct.Content
                        </p>
                        <div class="hero-button wow fadeInDown" data-wow-delay=".7s">
                            <button type="button" class="add-to-cart-btn theme-btn style-one" data-product-id="@Model.BestSellingProduct.ProductId" data-quantity="1">Thêm vào giỏ</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>