@model CustomArticleViewModel


<!--====== Start Page Section ======-->
<section class="page-banner">
    <div class="page-bg-wrapper p-r z-1 bg_cover pt-100 pb-110" style="background-image: url(/public_page/assets/images/bg/page-bg.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--=== Page Banner Content ===-->
                    <div class="page-banner-content text-center">
                        <h1 class="page-title">@ViewBag.Title</h1>
                        <ul class="breadcrumb-link">
                            <li><a href="index.html">Trang chủ</a></li>
                            <li class="active">@ViewBag.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!--====== End Page Section ======-->
<!--====== Start Blogs Page ======-->
<section class="blogs-grid-section pt-130 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-xl-8">
                <!--=== Blogs Details Wrapper ===-->
                <div class="blog-details-wrapper">
                    <div class="blog-post-item wow fadeInUp">
                        <div class="main-post">
                            <div class="post-content">
                                <h4 class="post-title">@Model.Article.Title</h4>
                                <div class="post-meta">
                                    <span><a href="#">@(Model.Article.Author.LastName + " " + Model.Article.Author.FirstName)</a></span>
                                    <span><a href="#">@Model.Article.CreatedAt.ToString("dd MMM, yyyy")</a></span>
                                </div>
                                <figure>
                                    <div class="d-flex justify-content-center align-items-center overflow-hidden" style="width: 410px;height: 280px;">
                                        <img src="@Model.Article.CoverImage" alt="@Model.Article.Title" width="100%" height="100%" class="object-fit-fill">
                                    </div>
                                </figure>
                                <p>@Html.Raw(Model.Article.Content)</p>
                            </div>
                        </div>
                        <div class="entry-footer wow fadeInUp">
                            <div class="tag-links">
                                <span>Tag:</span>
                                @{
                                    string[] tags = Model.Article.Tags != null ? Model.Article.Tags.Split(",", StringSplitOptions.RemoveEmptyEntries) : new string[0];
                                    foreach (var tag in tags)
                                    {
                                        <a href="#">@tag</a>
                                    }
                                }
                            </div>
                            <div class="social-share">
                                <span>share:</span>
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                                <a href="#"><i class="far fa-paper-plane"></i></a>
                                <a href="#"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4">
                <!--=== Sidebar Widget Wrapper ===-->
                <div class="sidebar-widget-area">
                    <div class="sidebar-widget sidebar-post-widget mb-30 wow fadeInDown">
                        <div class="widget-content">
                            <h4 class="sidebar-title">TIN TỨC MỚI NHẤT</h4>
                            <ul class="recent-post-list">
                                @foreach (var recentArticle in Model.RecentArticles)
                                {
                                    <li class="post-thumbnail-content">
                                        <img src="@recentArticle.CoverImage" alt="post thumb">
                                        <div class="post-title-date">
                                            <h6>
                                                <a href="@Url.Action("Detail", "Article", new {articleId = recentArticle.ArticleId})">
                                                    @recentArticle.Title
                                                </a>
                                            </h6>
                                            <span class="posted-on"><a href="#">@recentArticle.CreatedAt.ToString("dd MMM, yyyy")</a></span>
                                        </div>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!--====== End Blogs Page ======-->