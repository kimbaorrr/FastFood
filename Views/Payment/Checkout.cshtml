@model AddPaymentViewModel


<!--====== Start Page Section ======-->
<section class="page-banner">
    <div class="page-bg-wrapper p-r z-1 bg_cover pt-100 pb-110" style="background-image: url(/public_page/assets/images/bg/page-bg.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--=== Page Banner Content ===-->
                    <div class="page-banner-content text-center">
                        <h1 class="page-title">@ViewBag.Title</h1>
                        <ul class="breadcrumb-link">
                            <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                            <li class="active">@ViewBag.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!--====== End Page Section ======-->
<!--====== Start Checkout Section ======-->
<section class="checkout-section pt-130 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=== Checkout Wrapper ===-->
                <div class="checkout-wrapper mt-50 wow fadeInUp">
                    <!--=== Checkout Form ===-->
                    @using (Html.BeginForm("Index", "Payment", FormMethod.Post, new { @class = "checkout-form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.PromoId)
                        @Html.HiddenFor(x => x.TotalProductPrice)
                        @Html.HiddenFor(x => x.ShippingFee)
                        @Html.HiddenFor(x => x.TotalPay)

                        <div class="row">
                            <div class="col-xl-8">
                                <h4 class="title mb-15">Thông tin giao hàng</h4>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form_group">
                                            @Html.LabelFor(x => x.Customer.LastName)
                                            @Html.TextBoxFor(x => x.Customer.LastName, new { @class = "form_control", @readonly = "" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form_group">
                                            @Html.LabelFor(x => x.Customer.FirstName)
                                            @Html.TextBoxFor(x => x.Customer.FirstName, new { @class = "form_control", @readonly = "" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form_group">
                                            @Html.LabelFor(x => x.Customer.Address)
                                            @Html.TextBoxFor(x => x.Customer.Address, new { @class = "form_control", @required = "" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form_group">
                                            @Html.LabelFor(x => x.Customer.City)
                                            @Html.TextBoxFor(x => x.Customer.City, new { @class = "form_control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form_group">
                                            @Html.LabelFor(x => x.Customer.PostalCode)
                                            @Html.TextBoxFor(x => x.Customer.PostalCode, new { @class = "form_control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form_group">
                                            <label>Thông tin liên hệ</label>
                                            @Html.TextBoxFor(x => x.Customer.Email, new { @class = "form_control" })
                                            @Html.TextBoxFor(x => x.Customer.PhoneNumber, new { @class = "form_control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form_group">
                                            @Html.LabelFor(x => x.Customer.OrderNote)
                                            @Html.TextAreaFor(x => x.Customer.OrderNote, new { @class = "form_control", @rows = 3 })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="shopping-cart-area mb-50 wow fadeInDown">
                                    <h4 class="title mb-15">Thông tin thanh toán</h4>
                                    <div class="shopping-cart-total">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td>Tổng tiền sản phẩm</td>
                                                    <td>@Html.DisplayTextFor(x => x.TotalProductPrice)</td>
                                                </tr>
                                                <tr>
                                                    <td>Phí vận chuyển</td>
                                                    <td>+@Html.DisplayTextFor(x => x.ShippingFee)</td>
                                                </tr>
                                                <tr>
                                                    <td>Mã khuyến mãi</td>
                                                    <td>-@Html.DisplayTextFor(x => x.PromoAmount)</td>
                                                </tr>
                                                <tr>
                                                    <td class="total"><span>Tổng thanh toán</span></td>
                                                    <td class="total price"><span>@Html.DisplayTextFor(x => x.TotalPay)</span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <button class="theme-btn style-one d-block mx-auto mt-4">Thanh toán</button>
                                    </div>

                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section><!--====== End Checkout Section ======-->
