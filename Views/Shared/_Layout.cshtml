    <script>
                var $responseData = [];
        const csrfToken = $('input[name="__RequestVerificationToken"]').val();
        function loadCartItems(callback) {
            $.ajax({
                url: '@Url.Action("GetItem", "Cart")',
                method: 'GET',
                dataType: 'json',
                success: function (response) {
                    $responseData = response;
                    summaryCheckout("");
                    if (callback) callback();
                },
                error: function (error) {
                    console.error('Lỗi khi tải giỏ hàng:', error);
                }
            });
        }

        function updateToSubCart() {
            loadCartItems(function () {
                const cartList = $('.foodix-mini-cart-list');
                cartList.empty();

                if ($responseData.length === 0) {
                    cartList.append('<p class="fw-bold text-danger text-center mt-3">Giỏ hàng rỗng!</p>');
                } else {
                    $responseData.forEach(function (item) {
                        cartList.append(`
                                    <li class="foodix-menu-cart">
                                        <button type="button" class="remove-cart remove-cart-btn bg-white" data-product-id="${item.MaSanPham}"><i class="far fa-trash-alt"></i></button>
                                        <a href="#">
                                            <img src="${item.HinhAnh}" alt="cart image">
                                            ${item.TenSanPham}
                                        </a>
                                        <span class="quantity">${item.SoLuong} × <span>${item.GiaBan} VNĐ</span></span>
                                    </li>
                                `);
                    });
                }
            });
        }

        function updateToCartPage() {
            loadCartItems(function () {
                const cartTable = $('.cart-table table tbody');
                cartTable.empty();

                if ($responseData.length === 0) {
                    cartTable.append('<tr><td class="fw-bold text-danger text-center mt-3">Giỏ hàng rỗng!</td></tr>');
                } else {
                    $responseData.forEach(function (item) {
                        cartTable.append(`
                                   <tr>
                                        <td class="thumbnail-title">
                                            <img src="${item.HinhAnh}" alt="Cart Image">
                                            <span class="title"><a href="menu-details.html">${item.TenSanPham}</a></span>
                                        </td>
                                        <td class="price">$${item.GiaBan}</td>
                                        <td class="quantity">
                                            <div class="quantity-input">
                                                <button class="quantity-down" data-product-id="${item.MaSanPham}"><i class="far fa-minus"></i></button>
                                                <input class="quantity" type="text" value="${item.SoLuong}" name="quantity">
                                                <button class="quantity-up" data-product-id="${item.MaSanPham}"><i class="far fa-plus"></i></button>
                                            </div>
                                        </td>
                                        <td class="subtotal">$${item.ThanhTien}</td>
                                        <td class="remove">
                                            <button type="button" class="remove-cart-btn bg-white" data-product-id="${item.MaSanPham}"><i class="fas fa-trash-alt"></i></button>
                                        </td>
                                    </tr>
                                `);
                    });
                }
            });
        }

        function addToCart(productId, quantity) {
            $.ajax({
                url: '@Url.Action("AddItem", "Cart")',
                method: 'POST',
                dataType: 'json',
                data: {
                    productId: productId,
                    quantity: quantity,
                    __RequestVerificationToken: csrfToken,
                },
                success: function (response) {
                    if (response.success) {
                        alertMessage(response.type, response.message);
                        updateToSubCart();
                    }
                },
                error: function (error) {
                    console.error('Lỗi khi thêm sản phẩm vào giỏ hàng:', error);
                }
            });
        }

        function removeFromCart(productId) {
            $.ajax({
                url: '@Url.Action("RemoveItem", "Cart")',
                method: 'POST',
                dataType: 'json',
                data: {
                    productId: productId,
                    __RequestVerificationToken: csrfToken,
                },
                success: function (response) {
                    if (response.success) {
                        alertMessage(response.type, response.message);
                        updateToSubCart();
                        updateToCartPage();
                    }
                },
                error: function (error) {
                    console.error('Lỗi khi xóa sản phẩm khỏi giỏ hàng:', error);
                }
            });
        }

        function decreaseQuantity(productId) {
            $.ajax({
                url: '@Url.Action("DecreaseQuantity", "Cart")',
                method: 'POST',
                dataType: 'json',
                data: {
                    productId: productId,
                    __RequestVerificationToken: csrfToken,
                },
                success: function (response) {
                    if (response.success) {
                        updateToSubCart();
                    }
                },
                error: function (error) {
                    console.error('Lỗi khi giảm số lượng sản phẩm:', error);
                }
            });
        }

        function cartIsEmpty() {
            return new Promise(function (resolve, reject) {
                $.ajax({
                    url: '@Url.Action("IsEmpty", "Cart")',
                    method: 'POST',
                    dataType: 'json',
                    data: {
                        __RequestVerificationToken: csrfToken,
                    },
                    success: function (response) {
                        console.log(response.success);
                        resolve(response);
                    },
                    error: function (error) {
                        console.error('Lỗi khi kiểm tra giỏ hàng rỗng!', error);
                        reject(error);
                    }
                });
            });
        }

        function summaryCheckout(couponCode) {
            $.ajax({
                url: '@Url.Action("GetSummaryCheckout", "Cart")',
                method: 'POST',
                dataType: 'json',
                data: {
                    couponCode: couponCode,
                    __RequestVerificationToken: csrfToken,
                },
                success: function (response) {
                    if (!response.success) {
                        alertMessage(response.type, response.message);
                    };

                    $(".cart-total-product").text(response.data.TongTienSanPham);
                    $(".cart-total-product").append('<span class="currency ps-1">VNĐ</span>');
                    $(".cart-shipping-fee").text(`+${response.data.PhiVanChuyen}`);
                    $(".cart-shipping-fee").append('<span class="currency ps-1">VNĐ</span>');
                    $(".cart-coupon-code").text(`-${response.data.MaKhuyenMai}`);
                    $(".cart-coupon-code").append('<span class="currency ps-1">VNĐ</span>');
                    $(".cart-total-pay").text(response.data.TongThanhToan);
                    $(".cart-total-pay").append('<span class="currency ps-1">VNĐ</span>');
                },
                error: function (error) {
                    console.error('Lỗi tóm tắt thanh toán. Thử lại !', error);
                }
            });
        }

        function alertMessage(type, message) {
            Toastify({
                text: message,
                duration: 2000,
                newWindow: true,
                close: true,
                gravity: "top",
                position: "center",
                stopOnFocus: true,
                style: {
                    background: type,
                }
            }).showToast();
        }

        function checkLogged(maKhachHang) {
            return maKhachHang !== null && maKhachHang !== "" && maKhachHang !== undefined;
        }


        // Khởi chạy khi load xong DOM
        $(document).ready(function () {
            const maKhachHang = '@maKH';
            const anhDD = '@anhDD';
            const hoTenKhachHang = '@Html.Raw(hoTenKH)';
            const email = '@email';
            updateToSubCart();

            $(document).on('click', '.add-to-cart-btn', function () {
                const productId = $(this).data('product-id');
                const quantity = $(this).data('quantity');
                addToCart(productId, quantity);

            });

            $(document).on('click', '.remove-cart-btn', function () {
                const productId = $(this).data('product-id');
                removeFromCart(productId);
            });

            $(document).on('click', '.cart-button', function () {
                updateToSubCart();
            });

            $(document).on('click', '#openRegistrationModal', function () {
                $('.modal').modal('hide');
                $("#registrationModal").modal("show");
            });

            $("#userChoose").on("click", () => {

                if (maKhachHang && anhDD) {
                    $('#userInfoModal #userInfoName').text(hoTenKhachHang);
                    $('#userInfoModal #userInfoEmail').text(email);
                    $('#userInfoModal img').attr("src", anhDD);
                    $('#userInfoModal').modal('show');
                } else {
                    $('#loginModal').modal('show');

                }
            });

            $(document).on('click', '#paymentPage', function () {
                if (!checkLogged(maKhachHang)) {
                    $('#loginModal').modal('show');
                } else {
                    cartIsEmpty().then(function (response) {
                        if (response.success) {
                            alertMessage(response.type, response.message);
                        }
                        else {
                            window.location.replace("@Url.Action("Index", "Checkout")");
                        }
                    });
                }
            });
        });
    </script>
